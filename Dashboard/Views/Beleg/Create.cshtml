@model DAL.Beleg

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-header no-bg b-a-0">
            Beleg erstellen
        </div>
        <div class="card-block">
            <p>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </p>

            <div class="form-group row">
                @Html.LabelFor(model => model.LieferartId, "LieferartId", htmlAttributes: new { @class = "col-xs-2 col-form-label" })
                <div class="col-xs-10">
                    @Html.DropDownList("LieferartId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.LieferartId, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group row">
                @Html.LabelFor(model => model.Datum, htmlAttributes: new { @class = "col-xs-2 col-form-label" })
                <div class="col-xs-10">
                    @Html.EditorFor(model => model.Datum, new { htmlAttributes = new { @class = "form-control", @type = "datetime-local" } })
                    @Html.ValidationMessageFor(model => model.Datum, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-xs-10">
                    <input type="submit" value="Erstellen" class="btn btn-primary m-r create-via-ajax" />
                    <a href="@Url.Action("Index")">
                        <button type="button" class="btn btn-default">Zurück</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}