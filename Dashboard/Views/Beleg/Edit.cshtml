@model DAL.Beleg

@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-header no-bg b-a-0">
            Beleg bearbeiten
        </div>
        <div class="card-block">
            <p>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
            </p>

            <div class="form-group row">
                @Html.LabelFor(model => model.LieferartId, "LieferartId", htmlAttributes: new { @class = "col-xs-2 col-form-label" })
                <div class="col-xs-10">
                    @Html.DropDownList("LieferartId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.LieferartId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Datum, htmlAttributes: new { @class = "col-xs-2 col-form-label" })
                <div class="col-xs-10">
                    <input class="form-control text-box single-line" data-val="true" data-val-date="Das Feld &quot;Datum&quot; muss eine Datumsangabe sein." data-val-required="Das Feld &quot;Datum&quot; ist erforderlich." id="Datum" name="Datum" type="datetime-local" value="">
                    <script type="text/javascript">
                        window.addEventListener("load", function () {
                            var val = currentFormatToDateTimeLocal('@Html.DisplayFor(model => model.Datum)');
                            $('#Datum').val(val);
                        });
                    </script>
                    @Html.ValidationMessageFor(model => model.Datum, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-xs-10">
                    <input type="submit" value="Speichern" class="btn btn-primary m-r edit-via-ajax" />
                    <a href="@Url.Action("Index")">
                        <button type="button" class="btn btn-default">Zurück</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}