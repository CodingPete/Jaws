@model IEnumerable<DAL.Beleg>

@{
    ViewBag.Title = "Index";
}

@Html.AntiForgeryToken()
<div class="row">
    <div class="card">
        <div class="card-header no-bg b-a-0">
            Belege
        </div>
        <div class="card-block">
            <p>
                <a href="@Url.Action("Create")" class="btn btn-success"><i class="material-icons text-default">add_circle</i></a>
            </p>
            <table class="table table-responsive table-hover datatable">
                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            <a style="opacity: 0;"><i class="material-icons text-primary">edit</i></a>
                        </th>
                        <th>
                            <a style="opacity: 0;"><i class="material-icons text-primary">delete</i></a>
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Datum)
                        </th>
                        <th>
                            Lieferart
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 0; }
                    @foreach (var item in Model)
                    {
                        i++;
                        <tr class="mouseEffects">
                            <th scope="row" data-title="#">
                                @Html.DisplayFor(modelItem => item.Id)
                            </th>
                            <th scope="row" data-title="">
                                <a href="@Url.Action("Edit", new { id = item.Id })"><i class="material-icons text-primary edit"></i></a>
                            </th>
                            <th scope="row" data-title="">
                                <a class="delete-confirmation" id="@Url.Action("Delete", new { id = item.Id })"><i class="material-icons text-primary delete"></i></a>
                            </th>
                            <td data-title="@Html.DisplayNameFor(model => model.Datum)" id="@Html.DisplayFor(modelItem => item.Id)">
                                <script type="text/javascript">
                                    window.addEventListener("load", function () {
                                        var obj = currentDateFormatToObj('@Html.DisplayFor(modelItem => item.Datum)');
                                        $('td[id="@Html.DisplayFor(modelItem => item.Id)"]').html(obj.str + ":" + obj.second);
                                    });
                                </script>
                            </td>
                            <td data-title="@Html.DisplayNameFor(model => model.Lieferart.Name)">
                                @Html.DisplayFor(modelItem => item.Lieferart.Name)
                            </td>
                            <td data-title="Summe">
                                @ViewBag.summen.ElementAt(i)
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>