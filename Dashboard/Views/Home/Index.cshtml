                    </span>
                    <span>@miniStatistik.Wert @miniStatistik.Einheit</span>
                </h5>
                <div class="small text-overflow text-muted">
                    @miniStatistik.Name
                </div>
                <div class="small text-overflow">
                    Updated:&nbsp;<span>@DateTime.Now.ToShortTimeString()</span>
                </div>
            </div>
        </div>
    }
