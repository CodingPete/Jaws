@model DAL.Rolle

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-header no-bg b-a-0">
            Rolle erstellen
        </div>
        <div class="card-block">
            <p>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </p>

            <div class="form-group row">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-xs-2 col-form-label" })
                <div class="col-xs-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-xs-10">
                    <input type="submit" value="Erstellen" class="btn btn-primary m-r create-via-ajax" />
                    <a href="@Url.Action("Index")">
                        <button type="button" class="btn btn-default">Zurück</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
