@model DAL.Rolle

@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-header no-bg b-a-0">
            Rolle bearbeiten
        </div>
        <div class="card-block">
            <p>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
            </p>

            <div class="form-group row">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-xs-2 col-form-label" })
                <div class="col-xs-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @foreach (var item in ViewBag.Rechte)
                {
                    if (ViewBag.UserRechte.Contains(item))
                    {
                        <div class="checkbox">
                            <label><input class="form-control checkbox" type="checkbox" checked name="@item.Name" value=@item.Id />@item.Name</label>
                        </div>
                    }
                    else
                    {
                        <div class="checkbox">
                            <label><input class="form-control checkbox" type="checkbox" name="@item.Name" value=@item.Id />@item.Name</label>
                        </div>
                    }

                }
            </div>

            <div class="form-group row">
                <div class="col-xs-10">
                    <input type="submit" value="Speichern" class="btn btn-primary m-r edit-via-ajax" />
                    <a href="@Url.Action("Index")">
                        <button type="button" class="btn btn-default">Zurück</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}