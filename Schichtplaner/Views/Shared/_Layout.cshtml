﻿<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Jaws</title>

    @Styles.Render("~/Template/Style")
    <!-- endbuild -->
    @Styles.Render("~/Content/schichtplaner.css")
    @Styles.Render("~/Content/jquery.timepicker.min.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="app skin-4">
        <!--sidebar panel-->
        @if (User.Identity.IsAuthenticated)
        {
            <div class="off-canvas-overlay" data-toggle="sidebar"></div>
            <div class="sidebar-panel">
                <div class="brand">
                    <!-- toggle offscreen menu -->
                    <a href="javascript:;" data-toggle="sidebar" class="toggle-offscreen hidden-lg-up">
                        <i class="material-icons">menu</i>
                    </a>
                    <!-- /toggle offscreen menu -->
                    <!-- logo -->
                    <a class="brand-logo">
                        <img class="expanding-hidden" src="~/Content/template/images/onlinelogomaker-022817-1749-7556.png" alt="" />
                    </a>
                    <!-- /logo -->
                </div>
                <!-- main navigation -->
                <nav>
                    <p class="nav-title">NAVIGATION</p>
                    <ul class="nav">
                        <!-- dashboard -->
                        @if (User.IsInRole("Schichtplaner"))
                        {
                            <li>
                                <a href="@Url.Action("Index", "Plan")">
                                    <i class="material-icons text-primary">perm_contact_calendar</i>
                                    <span>Schichten Administrieren</span>
                                </a>
                                <a href="@Url.Action("Schichtplan", "Home")">
                                    <i class="material-icons text-primary">perm_contact_calendar</i>
                                    <span>Schichtplan</span>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a href="@Url.Action("Schichtplan", "Home")">
                                    <i class="material-icons text-primary">perm_contact_calendar</i>
                                    <span>Schichtplan Kalendar</span>
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Schichtplan", "Home")">
                                    <i class="material-icons text-primary">perm_contact_calendar</i>
                                    <span>Schichtplan Liste</span>
                                </a>
                            </li>
                        }

                        <!-- /dashboard -->
                    </ul>
                </nav>
                <!-- /main navigation -->


            </div>
        }
        <!-- /sidebar panel -->
        <!-- content panel -->
        <div class="main-panel">
            <!-- top header -->
            <nav class="header navbar">
                <div class="header-inner">
                    <div class="navbar-item navbar-spacer-right brand hidden-lg-up">
                        <!-- toggle offscreen menu -->
                        <a href="javascript:;" data-toggle="sidebar" class="toggle-offscreen">
                            <i class="material-icons">menu</i>
                        </a>
                        <!-- /toggle offscreen menu -->
                        <!-- logo -->
                        <a class="brand-logo hidden-xs-down">
                            <img src="~/Content/template/images/onlinelogomaker-022817-1747-1697.png" alt="logo" />
                        </a>
                        <!-- /logo -->
                    </div>
                    <a class="navbar-item navbar-spacer-right navbar-heading hidden-md-down" href="#">
                        @if (User.IsInRole("Schichtplaner"))
                        {
                            <span>Schichtplaner - Administration</span>
                        }
                        else
                        {
                            <span>Schichtplaner</span>
                        }

                    </a>
                    <div class="navbar-item nav navbar-nav">
                        <div class="nav-item nav-link dropdown">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown">
                                        <span>Hallo @Session["Vorname"] @Session["Name"]</span>
                                        <span class="menu-caret">
                                            <i class="material-icons">arrow_drop_down</i>
                                        </span>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right">
                                    <a class="dropdown-item" href="@Url.Action("Logout", "Login")">Logout</a>
                            </div>
                                }
                                else
                                {
                                    <span>Bitte logge dich ein</span>
                                }
                                
                        </div>
                    </div>
                </div>
            </nav>
            <!-- /top header -->
            <!-- main area -->
            <div class="main-content">
                <div class="content-view">
                    @RenderBody()
                </div>
                <!-- bottom footer -->
                <div class="content-footer">
                    <nav class="footer-left">
                        <ul class="nav">
                            <li>
                                <a href="javascript:;">
                                    <span>Copyright</span>
                                    &copy; 2016 Your App
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
                <!-- /bottom footer -->
            </div>
            <!-- /main area -->
        </div>
        <!-- /content panel -->
    </div>

    @Scripts.Render("~/Template/Scripts")
    @Scripts.Render("~/Scripts/schichtplaner_fields.js");
    @Scripts.Render("~/Scripts/schichtplaner_send.js");

    <!-- end page scripts -->
    <!-- initialize page scripts -->
    <script type="text/javascript">
        $('.datatable').DataTable({

        });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>